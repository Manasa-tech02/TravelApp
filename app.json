{
  "expo": {
    "name": "TravelApp",
    "slug": "TravelApp",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon_image.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.travelapp.app"
    },

    "android": {
      "package": "com.travelapp.app",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-secure-store",
      "@react-native-firebase/app"
    ],

    "extra": {
      "eas": {
        "projectId": "c0d5a244-2b29-4cfe-a474-51c29e648418"
      }
    }
  }
}
